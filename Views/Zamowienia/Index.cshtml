@model IEnumerable<ProjektZaliczenie.Models.Zamowienia>

@{
    ViewBag.Title = "Index";
}
<img src="Zooexpress.jpg" class="picture" />
<body>
    <div class="jumbotron">
        <h2>
            <span>Zamówienia</span>

        </h2>
    </div>
    <p>
        @Html.ActionLink("Dodaj nowe zamówienie", "Create")
    </p>
    <div id="zamowienialist-section">
        <table class="table table-bordered table-hover">
            <tr>
                <th>

                    @Html.DisplayNameFor(model => model.Uzytkownik)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Opis)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Uzytkownik)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Opis)
                    </td>
                    <td>
                        
                        @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</body>