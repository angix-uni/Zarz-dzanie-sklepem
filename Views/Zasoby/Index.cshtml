@model IEnumerable<ProjektZaliczenie.Models.Produkt>

@{
    ViewBag.Title = "Index";
}
<img src="Zooexpress.jpg" class="picture" />
    <body>
        <div class="jumbotron">
            <h2>
                <span>Lista produktów</span>
            
            </h2>
        </div>
        <p>
            @Html.ActionLink("Dodaj nowy produkt", "Create")
        </p>
        <div id="produktlist-section">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>

                        @Html.DisplayNameFor(model => model.Nazwa)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Opis)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Dział)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Uwagi)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nazwa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Opis)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dział)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Uwagi)
                        </td>
                        <td>
                            @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>
        </body>